<Window x:Class="Bloxstrap.UI.Elements.Bootstrapper.EACDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Width="800" 
        Height="450"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Black"
        Closing="Window_Closing">
    <Window.Resources>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" x:Key="ProgressBarGradient">
            <GradientStop Color="#339BFF" Offset="0" />
            <GradientStop Color="#76E1FF" Offset="2.0" />
        </LinearGradientBrush>
    </Window.Resources>
    <Border BorderBrush="#33393B3D">
        <Grid>
            <Grid Panel.ZIndex="2" Height="40" Width="40"  Margin="45,-420,-725,0">
                <Border BorderBrush="#33393B3D" Background="#0D3B5E" Opacity="0.75" BorderThickness="0" CornerRadius="5">
                </Border>
            </Grid>
            <Button Panel.ZIndex="3" VerticalAlignment="Top" HorizontalAlignment="Right" Height="35" Width="35" Background="Transparent" BorderBrush="Transparent" Visibility="{Binding CancelButtonVisibility, Mode=OneWay}" Command="{Binding CancelInstallCommand}" >
                <Path Fill="White" Height="10" Stretch="Fill" Width="10">
                    <Path.Data>
                        <PathGeometry Figures="m 6.7507011 2.1168752 c -1.0144874 0 -2.0291944 0.3884677 -2.8065471 1.1658203 -1.5547052 1.5547053 -1.5547052 4.0583888 10e-8 5.6130941 L 28.499761 33.45088 3.9441541 58.006487 c -1.5547058 1.554706 -1.5547051 4.057873 0 5.612578 1.554705 1.554705 4.0583891 1.554705 5.6130942 0 l 24.5550907 -24.55509 24.555607 24.55509 c 1.554705 1.554705 4.057871 1.554705 5.612577 0 1.554705 -1.554706 1.554705 -4.057872 0 -5.612577 L 39.725433 33.450881 64.280523 8.89579 c 1.554706 -1.5547058 1.554705 -4.0583892 0 -5.6130942 -1.554705 -1.5547051 -4.057872 -1.5547058 -5.612578 -7e-7 L 34.112338 27.838303 9.5572482 3.2826955 C 8.7798955 2.5053428 7.7651883 2.1168752 6.7507011 2.1168752 Z" FillRule="Nonzero"/>
                    </Path.Data>
                </Path>
            </Button>
            <Image Panel.ZIndex="0" Source="{Binding EACBackgroundLocation}" Opacity="0.85" Stretch="Fill"/>
            <Grid VerticalAlignment="Bottom">
                <Image Panel.ZIndex="2" gif:ImageBehavior.AnimatedSource="{Binding EACLogo}" gif:ImageBehavior.RepeatBehavior="1x" Width="250" Height="123" HorizontalAlignment="Left" Margin="0,0,0,0" />
                <TextBlock Panel.ZIndex="2" Height="20" Width="390" Margin="0,83,10,35" HorizontalAlignment="Right" TextAlignment="Right" Text="{Binding Message}" Foreground="White" FontFamily="{StaticResource Inter}" FontSize="17" RenderTransformOrigin="0.611,0.55" />
                <ProgressBar Panel.ZIndex="3" Width="810" Height="25" BorderThickness="0" Background="Gray" Opacity="0.75" Foreground="{StaticResource ProgressBarGradient}" IsIndeterminate="{Binding ProgressIndeterminate}" Value="{Binding ProgressValue}" Margin="-10,0,-10,-115" />
            </Grid>
        </Grid>
    </Border>
</Window>
