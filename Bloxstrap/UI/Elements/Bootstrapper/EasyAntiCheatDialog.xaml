<Window x:Class="Bloxstrap.UI.Elements.Bootstrapper.EasyAntiCheatDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Closing="UiWindow_Closing">
    <Border BorderBrush="#33393B3D" Background="{Binding Background}" BorderThickness="{Binding DialogBorder}">
        <Grid>
            <Image Panel.ZIndex="1" Source="{Binding EasyAntiCheatLogoLocation}" Margin="20,20,0,0" Width="150" Height="150" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <Image Source="{Binding EasyAntiCheatBackgroundLocation}" />
            <Button Margin="15" VerticalAlignment="Top" HorizontalAlignment="Right" Width="20" Height="20" BorderThickness="0" Padding="1" Background="Transparent" BorderBrush="Transparent" Visibility="{Binding CancelButtonVisibility, Mode=OneWay}" Command="{Binding CancelInstallCommand}">
                <Path Fill="{Binding IconColor}" Stretch="Fill">
                    <Path.Data>
                        <PathGeometry Figures="m 6.7507011 2.1168752 c -1.0144874 0 -2.0291944 0.3884677 -2.8065471 1.1658203 -1.5547052 1.5547053 -1.5547052 4.0583888 10e-8 5.6130941 L 28.499761 33.45088 3.9441541 58.006487 c -1.5547058 1.554706 -1.5547051 4.057873 0 5.612578 1.554705 1.554705 4.0583891 1.554705 5.6130942 0 l 24.5550907 -24.55509 24.555607 24.55509 c 1.554705 1.554705 4.057871 1.554705 5.612577 0 1.554705 -1.554706 1.554705 -4.057872 0 -5.612577 L 39.725433 33.450881 64.280523 8.89579 c 1.554706 -1.5547058 1.554705 -4.0583892 0 -5.6130942 -1.554705 -1.5547051 -4.057872 -1.5547058 -5.612578 -7e-7 L 34.112338 27.838303 9.5572482 3.2826955 C 8.7798955 2.5053428 7.7651883 2.1168752 6.7507011 2.1168752 Z" FillRule="NonZero"/>
                    </Path.Data>
                </Path>
            </Button>
            <Grid Margin="0,0,0,0" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="249*"/>
                    <ColumnDefinition Width="151*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Margin="10,-7,-10,30" TextAlignment="Center" Grid.Row="0" Text="{Binding Message}" Foreground="White" FontFamily="{StaticResource Rubik}" FontSize="17" FontWeight="Light" Grid.ColumnSpan="2">
                    <TextBlock.LayoutTransform>
                        <ScaleTransform ScaleY="0.9"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
                <Rectangle Width="820" Height="20" Margin="-10,27,-10,-1" Panel.ZIndex="0" Grid.ColumnSpan="2" Grid.RowSpan="2">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0">
                            <GradientStop Color="#339BFF" Offset="0.0" />
                            <GradientStop Color="#76E0FF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <ProgressBar Width="820" Height="20" Panel.ZIndex="1" BorderThickness="0" Background="Transparent" Foreground="Transparent" IsIndeterminate="{Binding ProgressIndeterminate}" Value="{Binding ProgressValue}" Margin="-10,28,-10,-2" ValueChanged="ProgressBar_ValueChanged" />
            </Grid>
        </Grid>
    </Border>
</Window>
